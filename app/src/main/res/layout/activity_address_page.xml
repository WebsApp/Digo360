<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddressPage">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/address_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:layout_gravity="center"
            android:padding="2dp"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="Address"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:gravity="right">

                <ImageView
                    android:id="@+id/btn_faq"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/question"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height='wrap_content'
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="#626262"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="right">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/address_edite"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/pen"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1st Floor jodhpur Gardens Near South City Mall Kolkata700035 India"
                android:textColor="#6A0E97"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/edit_user_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/edite_one"
                android:textSize="13dp"
                android:background="@null"
                android:textColor="@color/purple"
                android:textColorHint="@color/purple"
                android:maxLength="9"
                android:layout_gravity="center"
                android:padding="10dp"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/Roadno"
                android:textSize="13dp"
                android:background="@null"
                android:textColor="@color/purple"
                android:textColorHint="@color/purple"
                android:maxLength="9"
                android:layout_gravity="center"
                android:padding="10dp"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/area"
                android:textSize="13dp"
                android:background="@null"
                android:textColor="@color/purple"
                android:textColorHint="@color/purple"
                android:maxLength="9"
                android:layout_gravity="center"
                android:padding="10dp"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:id="@+id/cv_operated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="5dp">

                <Spinner
                    android:id="@+id/sp_operated"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/background"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cv_surgery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp">

                <Spinner
                    android:id="@+id/sp_surgery"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/background"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/zipcode"
                android:textSize="13dp"
                android:background="@null"
                android:textColor="@color/purple"
                android:textColorHint="@color/purple"
                android:maxLength="9"
                android:layout_gravity="center"
                android:padding="10dp"
                android:inputType="textPassword" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/tv_registration"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35ssp"
                android:layout_gravity="center"
                android:background="@drawable/ripple_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/submit"
                android:textColor="@color/yellow"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>