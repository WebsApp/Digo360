<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.PatientsProblemActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_back_arrow" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="@string/patients_checkup"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/sc"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_problem"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="Is He/She have BP ?"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/rg_bp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sugar"
                android:layout_gravity="start"
                android:gravity="start"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_yes_bp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textColor="@color/purple" />

                <RadioButton
                    android:id="@+id/rb_no_bp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/no"
                    android:textColor="@color/purple" />

            </RadioGroup>
            <!--******-->
            <LinearLayout
                android:id="@+id/bp_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/cv_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.5"
                    app:cardElevation="8dp">

                    <EditText
                        android:id="@+id/et_before_bp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/time_bg"
                        android:gravity="center"
                        android:hint="Before Lunch"
                        android:inputType="number"
                        android:textColor="@color/purple3"
                        android:textColorHint="@color/purple3"
                        android:maxLength="3"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cv_bp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.5"
                    app:cardElevation="8dp">

                    <EditText
                        android:id="@+id/et_after_bp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/time_bg"
                        android:gravity="center"
                        android:hint="After Lunch"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="@color/purple3"
                        android:textColorHint="@color/purple3"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_problem"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="Enter Body Temperature"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:textSize="16dp" />

            <LinearLayout
                android:id="@+id/height_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.5"
                    app:cardElevation="8dp">

                    <EditText
                        android:id="@+id/et_temp"
                        android:background="@drawable/time_bg"
                        android:padding="15dp"
                        android:textColorHint="@color/purple"
                        android:hint="Enter Temperature"
                        android:textSize="18dp"
                        android:textColor="@color/purple"
                        android:maxLength="10"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_problem"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="Enter Height And Weight"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:textSize="16dp" />

            <LinearLayout
                android:id="@+id/temp_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.5"
                    app:cardElevation="8dp">

                    <EditText
                        android:id="@+id/et_height"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/time_bg"
                        android:gravity="center"
                        android:hint="Height"
                        android:inputType="number"
                        android:textColor="@color/purple3"
                        android:textColorHint="@color/purple3"
                        android:maxLength="3"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.5"
                    app:cardElevation="8dp">

                    <EditText
                        android:id="@+id/et_weight"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/time_bg"
                        android:gravity="center"
                        android:hint="Weight"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="@color/purple3"
                        android:textColorHint="@color/purple3"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_pulse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llitem1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="5dp"
                android:text="Choose Pulse Rate"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/rg_pulse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sugar"
                android:layout_gravity="start"
                android:gravity="start"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_yes_pulse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textColor="@color/purple" />

                <RadioButton
                    android:id="@+id/rb_no_pulse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/no"
                    android:textColor="@color/purple" />
            </RadioGroup>
            <!--******-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/pulse_layout"
                android:background="@drawable/time_bg"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_pulse"
                    android:layout_marginStart="5dp"
                    android:background="@null"
                    android:padding="15dp"
                    android:textColorHint="@color/purple"
                    android:hint="Enter Pulse Rate"
                    android:textSize="18dp"
                    android:textColor="@color/purple"
                    android:maxLength="10"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_sugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llitem2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="Is He/She have Sugar ?"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/purple"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/rg_sugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sugar"
                android:layout_gravity="start"
                android:gravity="start"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_yes_sugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textColor="@color/purple" />

                <RadioButton
                    android:id="@+id/rb_no_sugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/no"
                    android:textColor="@color/purple" />
            </RadioGroup>
            <!--******-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/sugar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_sugarr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.5"
                    android:padding="3dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <EditText
                        android:id="@+id/et_sugar"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/time_bg"
                        android:gravity="center"
                        android:hint="Enter Sugar"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textSize="14dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_highSugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.5"
                    android:padding="3dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/time_bg"
                        android:gravity="center"
                        android:hint="Enter Sugar"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textSize="14dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_allergy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llitem2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="Patient have Allergy ?"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/rg_allergy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sugar"
                android:layout_gravity="start"
                android:gravity="start"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_yes_allergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textColor="@color/purple" />

                <RadioButton
                    android:id="@+id/rb_no_allergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/no"
                    android:textColor="@color/purple" />
            </RadioGroup>
            <!--******-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/allergy_layout"
                android:background="@drawable/time_bg"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_allergy"
                    android:background="@null"
                    android:padding="15dp"
                    android:textColorHint="@color/purple"
                    android:hint="Enter Allergy"
                    android:textSize="18dp"
                    android:textColor="@color/purple"
                    android:maxLength="10"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_surgery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llitem2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="Patient have any Surgery ?"
                android:layout_marginTop="@dimen/_5sdp"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/rg_surgery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sugar"
                android:layout_gravity="start"
                android:gravity="start"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_yes_surgery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textColor="@color/purple" />

                <RadioButton
                    android:id="@+id/rb_no_surgery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/no"
                    android:textColor="@color/purple" />
            </RadioGroup>
            <!--******-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/surgery_layout"
                android:background="@drawable/time_bg"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_surgery"
                    android:background="@null"
                    android:padding="15dp"
                    android:textColorHint="@color/purple"
                    android:hint="Enter Surgery"
                    android:textSize="18dp"
                    android:textColor="@color/purple"
                    android:maxLength="10"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llitem3"
                android:layout_margin="5dp"
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/patient_otherIssue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/any_other_problem"
                    android:textColor="@color/purple"
                    android:textColorHint="@color/purple"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_yes_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes"
                        android:textColor="@color/purple" />

                    <RadioButton
                        android:id="@+id/rb_no_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/no"
                        android:textColor="@color/purple" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/ll_otherProblem"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="60dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/time_bg"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <EditText
                            android:id="@+id/other_problem"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="start"
                            android:hint="@string/any_other_problem"
                            android:padding="5dp"
                            android:textColor="@color/purple"
                            android:textColorHint="@color/purple"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--******-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/other_layout"
                android:background="@drawable/time_bg"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_other_problem"
                    android:background="@null"
                    android:padding="15dp"
                    android:textColorHint="@color/purple"
                    android:hint="Other Problem"
                    android:textSize="18dp"
                    android:textColor="@color/purple"
                    android:maxLength="10"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="7dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ripple_bg"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/submit"
                    android:textColor="@color/yellow"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>