<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.PatientsProblemActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_back_arrow" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="@string/patients_checkup"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sc"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/patient_problem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/is_he_having"
                    android:textColor="@color/purple"
                    android:textColorHint="@color/purple"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_bp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_problem"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="BP"
                android:textColor="@color/purple"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/rg_bp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sugar"
                android:layout_gravity="start"
                android:gravity="start"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_yes_bp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textColor="@color/purple" />

                <RadioButton
                    android:id="@+id/rb_no_bp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/no"
                    android:textColor="@color/purple" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/llitem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.5"
                    android:padding="3dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="Enter BP"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textSize="14dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_bp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.5"
                    android:padding="3dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="Enter BP"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textSize="14dp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_pulse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llitem1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="Pulse"
                android:textColor="@color/purple"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/rg_pulse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sugar"
                android:layout_gravity="start"
                android:gravity="start"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_yes_pulse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textColor="@color/purple" />

                <RadioButton
                    android:id="@+id/rb_no_pulse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/no"
                    android:textColor="@color/purple" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/llitem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pulse"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.5"
                    android:padding="3dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="5dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="Enter Pulse"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textSize="14dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_sugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llitem2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="Sugar"
                android:textColor="@color/purple"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/rg_sugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sugar"
                android:layout_gravity="start"
                android:gravity="start"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_yes_sugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textColor="@color/purple" />

                <RadioButton
                    android:id="@+id/rb_no_sugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/no"
                    android:textColor="@color/purple" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/llitem_sugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_sugarr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.5"
                    android:padding="3dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="Enter Sugar"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textSize="14dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_highSugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.5"
                    android:padding="3dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="Enter Sugar"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textSize="14dp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_allergy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llitem2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="Allergy"
                android:textColor="@color/purple"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/rg_allergy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sugar"
                android:layout_gravity="start"
                android:gravity="start"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_yes_allergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textColor="@color/purple" />

                <RadioButton
                    android:id="@+id/rb_no_allergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/no"
                    android:textColor="@color/purple" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/llitem_allergy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_allergy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.5"
                    android:padding="3dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="2dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="Enter Allergy"
                        android:textSize="14dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_surgery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llitem2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="Surgery"
                android:textColor="@color/purple"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/rg_surgery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sugar"
                android:layout_gravity="start"
                android:gravity="start"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_yes_surgery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textColor="@color/purple" />

                <RadioButton
                    android:id="@+id/rb_no_surgery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/no"
                    android:textColor="@color/purple" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/llitem_surgery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_surgery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.5"
                    android:padding="3dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="2dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="Enter surgery"
                        android:textSize="14dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llitem3"
                android:layout_margin="5dp"
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/patient_otherIssue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/any_other_problem"
                    android:textColor="@color/purple"
                    android:textColorHint="@color/purple"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_yes_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes"
                        android:textColor="@color/purple" />

                    <RadioButton
                        android:id="@+id/rb_no_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/no"
                        android:textColor="@color/purple" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/ll_otherProblem"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="60dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/time_bg"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <EditText
                            android:id="@+id/other_problem"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="start"
                            android:hint="@string/any_other_problem"
                            android:padding="5dp"
                            android:textColor="@color/purple"
                            android:textColorHint="@color/purple"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/sc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="By continuing you agree to our Terms &amp; Condition"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="5dp">

                    <TextView
                        android:id="@+id/tv_submit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@color/purple"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/submit"
                        android:textColor="@color/yellow"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>