    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Patient ID:-"
            android:textColor="@color/purple1"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp" />
        <TextView
            android:id="@+id/pt_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="name"
            android:textStyle="normal"
            android:textColor="@color/purple1"
            android:textSize="@dimen/_13ssp"
            android:layout_marginLeft="@dimen/_5sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Name:-"
                android:textColor="@color/purple1"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp" />
            <TextView
                android:id="@+id/pt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text=""
                android:textStyle="normal"
                android:textColor="@color/purple1"
                android:textSize="@dimen/_13ssp"
                android:layout_marginLeft="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Gender:-"
                android:textColor="@color/purple1"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp" />
            <TextView
                android:id="@+id/pt_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="Male"
                android:textStyle="normal"
                android:textColor="@color/purple1"
                android:textSize="@dimen/_13ssp"
                android:layout_marginLeft="@dimen/_5sdp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Age:-"
                android:textColor="@color/purple1"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp" />
            <TextView
                android:id="@+id/pt_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="0 Years"
                android:textStyle="normal"
                android:textColor="@color/purple1"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Diseases:-"
                android:textColor="@color/purple1"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp" />
            <TextView
                android:id="@+id/pt_diseases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="Fever"
                android:textStyle="normal"
                android:textColor="@color/purple1"
                android:textSize="@dimen/_13ssp"
                android:layout_marginLeft="@dimen/_5sdp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>