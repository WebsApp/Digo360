        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Digo360"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".activity.AboutDigo"
            android:exported="false" />
        <activity
            android:name=".activity.MyProfile"
            android:exported="false" />
        <activity
            android:name=".activity.AfterQuestionActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SpecialActivity"
            android:exported="false" />
        <activity
            android:name=".activity.QuestionsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AfterPatientRegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".activity.NewCasectivity"
            android:exported="false" />
        <activity
            android:name=".activity.NotificationActivity"
            android:exported="false" />
        <activity
            android:name=".activity.LoadingPage"
            android:exported="false" />
        <activity
            android:name=".activity.ChooseLanguageActivity"
            android:exported="false" />
        <activity
            android:name=".activity.RegistrationActivity"
